.br
HOME=/root
.br
\LANG=en_US.UTF-8
.br
LS_COLORS=rs=0:di=01;34:ln=01;36:(...)
.br
LESSCLOSE=/usr/bin/lesspipe %s %s
.br
TERM=xterm
.br
